  "bugs": {
    "url": "https://github.com/samee-shahood/taskbase"
  },
  "homepage": "https://github.com/samee-shahood/taskbase",
  "dependencies": {
    "@react-latest-ui/react-sticky-notes": "^0.2.6",
    "concurrently": "^5.3.0",
    "react-digital-clock": "^0.1.2",
    "react-stickies": "0.0.16"
  }
}
